<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Apperitivo</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
<!-- 		MAP		 -->
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="image-responsive" src="<%= venue.image%>">
				<div class="caption-full">
					<!-- <h4 class="pull-right">Â£9.00/night</h4> -->
					<h4><a><%= venue.name%></a></h4>
					<p><%= venue.description%></p>
					<a href="/venues/<%=venue._id%>/edit" class="btn btn-sm btn-warning">Modifica</a>
					<form class="deleteForm"action="/venues/<%= venue._id%>/?_method=DELETE" method="POST">
						<button class="btn btn-sm btn-danger">
							Rimuovi
						</button>
					</form>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/venues/<%= venue._id%>/comments/new">Aggiungi una recensione</a>
					<hr>
				</div>
				<% venue.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username%></strong>
						<span class="pull-right">10 days ago</span>
						<p><%= comment.text %></p>
						<a href="/venues/<%=venue._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">Modifica </a>
					<form class="deleteForm"action="/venues/<%= venue._id%>/comments/<%=comment._id%>/?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">
							Rimuovi
						</button>
					</form>
					</div>
				</div>
<% }) %>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>