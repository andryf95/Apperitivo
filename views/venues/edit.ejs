<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Modifica <%= venue.name %></h1>
		<div style="width: 30%; margin:25px auto">
			<form action="/venues/<%= venue._id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%=venue.name%>" name="venue[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=venue.image%>" name="venue[image]">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=venue.description%>" name="venue[description]">	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">MODIFICA!</button>	
				</div>
			</form>
			<a href="/venues/<%=venue._id%>">Indietro</a>
			</div>
	</div>
</div>

<%- include("../partials/footer") %>